<div class="container">
<div class="highlight">
{% for u in use %}
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                        <img src="{{ 'https://cdn.42.fr/userprofil/profilview/' ~ u.username  ~ '.jpg' }}" alt="" class="img-rounded img-responsive">
                    </figure>
				</div>
                <div class="col-xs-12 col-sm-8">
                    <h2>{{ u.name }} </h2>
				    <p><strong>{{ 'login'|trans }}:</strong> {{ u.username }}</p
				    <p><strong>{{ 'Uid'|trans }}:</strong> {{ u.Nbuid }}</p>
					<p><i class="fa fa-envelope"></i> {{ u.email }}</p>
                </div>

 </div>
            </div>
    	</div>
	</div>
</div>

<div class="container">
<div class="highlight">
<h2>Note</h2>
{% for m in mark %}
{{ m.activity.module }}
{{ m.activity }}
{{ m.score }}
{% endfor %}
{% else %}
<center> User Not found </center>
{% endfor %}
	</div>
</div>

